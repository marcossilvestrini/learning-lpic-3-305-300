{
    "builders": [
        {
            "type": "docker",
            "image": "nginx:latest",
            "commit": true,
	    "changes": [
		    "VOLUME /usr/share/nginx/html",
		    "EXPOSE 8080"
	    ]

        }
    ],
   
    "provisioners": [
      {
	      "type": "file",
	      "source": "index.html",
	      "destination": "/usr/share/nginx/html/"
      },
      {
	      "type": "file",
	      "source": "nginx.conf",
	      "destination": "/etc/nginx/"
      },
      {
	      "type": "shell",
	      "inline": 
	      [
		      "apt update -y",
		      "apt install vim -y"
	      ]
      }
   ],
   "post-processors": [
	   {
		   "type": "docker-tag",
		   "repository": "mrsilvestrini/novo-nginx",
		   "tag": "1.0"
	   }
   ]

}
